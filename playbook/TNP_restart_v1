---
- name: TNP_restart_v1
  hosts: all
  become: yes
  gather_facts: false

  tasks:
    - name: Tomcat,Nodeapp and PD restarting...
      systemd:
        name: "{{ item }}"
        state: restarted
      loop:
        - tomcat
        - passwd_daemon
        - nodapp_daemon
        
    - name: Tomcat,Nodeapp and PD status...
      command: sudo systemctl status tomcat passwd_daemon nodapp_daemon.service
      register: command_output
    
    - name: Display Command Output
      debug:
        var: command_output.stdout_lines
